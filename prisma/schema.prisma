// schema.prisma

generator client {
  provider = "prisma-client-js"
  previewFeatures = ["jsonProtocol"]
}

datasource db {
  provider = "postgresql"
  url = env("POSTGRES_PRISMA_URL")
  directUrl = env("POSTGRES_URL_NON_POOLING")
}

model User {
  id        Int      @id @default(autoincrement())
  username  String   @unique
  email     String   @unique
  password  String
  novels    Novel[]  // un usuario puede tener muchas novelas
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Novel {
  id         Int          @id @default(autoincrement())
  title      String
  content    String    
  authorId   Int       
  author     User        @relation(fields: [authorId], references: [id]) //hace referencia al id del autor
  genres     NovelGenre[] //una novela puede tener muchos generos
  createdAt  DateTime     @default(now())
  updatedAt  DateTime     @updatedAt
}

model Genre {
  id       Int          @id @default(autoincrement())
  name     String       @unique
  novels   NovelGenre[] //un genero puede estar en muchas novelas
}

model NovelGenre {
  novelId Int //tabla intermediaria
  genreId Int
  novel   Novel @relation(fields: [novelId], references: [id])
  genre   Genre @relation(fields: [genreId], references: [id])

  @@id([novelId, genreId]) 
}
